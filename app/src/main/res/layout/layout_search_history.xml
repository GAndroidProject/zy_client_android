<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:text="搜索历史"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_delete" />
    </RelativeLayout>

    <View
        style="@style/DivideLine"
        android:layout_marginTop="@dimen/dp_10" />

    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/tagGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:container_background_color="@android:color/white"
        app:container_border_color="@android:color/transparent"
        app:container_border_radius="0dp"
        app:container_border_width="0dp"
        app:container_enable_drag="false"
        app:container_gravity="left"
        app:horizontal_interval="@dimen/dp_10"
        app:tag_background_color="@color/white"
        app:tag_border_color="@color/black"
        app:tag_border_width="@dimen/dp_1"
        app:tag_clickable="true"
        app:tag_corner_radius="@dimen/dp_10"
        app:tag_horizontal_padding="@dimen/dp_10"
        app:tag_max_length="20"
        app:tag_ripple_alpha="50"
        app:tag_ripple_color="#000000"
        app:tag_ripple_duration="2000"
        app:tag_text_color="@color/color_font_black"
        app:tag_text_direction="ltr"
        app:tag_text_size="@dimen/font_13"
        app:tag_theme="none"
        app:tag_vertical_padding="@dimen/dp_5"
        app:vertical_interval="0dp" />

</LinearLayout>