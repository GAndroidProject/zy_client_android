<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:contentView="@id/content"
    app:rightMenuView="@id/right">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_15"
            android:singleLine="true"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/font_14"
            tools:text="是大家还是觉得时间的还是觉得" />

        <TextView
            android:id="@+id/tvSourceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_weight="3"
            android:gravity="center_vertical|end"
            android:lines="1"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/font_14"
            tools:text="是大家还是觉得时间的还是觉得" />

    </LinearLayout>

    <TextView
        android:id="@+id/right"
        android:layout_width="@dimen/dp_80"
        android:layout_height="match_parent"
        android:background="@color/color_main_theme"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/dp_20"
        android:text="删除"
        android:textColor="@color/color_player_white"
        android:textSize="@dimen/font_14" />

</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>