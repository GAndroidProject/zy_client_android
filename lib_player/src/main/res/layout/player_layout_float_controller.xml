<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/darker_gray">

    <ImageView
        android:id="@+id/start_play"
        android:layout_width="@dimen/dimen_player_play_btn_size_pip"
        android:layout_height="@dimen/dimen_player_play_btn_size_pip"
        android:layout_gravity="center"
        android:background="@drawable/player_shape_play_bg"
        android:padding="@dimen/dimen_player_default_spacing_pip"
        android:scaleType="centerCrop"
        android:src="@drawable/player_selector_play_button_float" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="@dimen/dimen_player_play_btn_size_pip"
        android:layout_height="@dimen/dimen_player_play_btn_size_pip"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/player_progress_loading"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        android:src="@drawable/ic_player_float_close" />

    <ImageView
        android:id="@+id/btn_skip"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_player_float_recover" />

</FrameLayout>